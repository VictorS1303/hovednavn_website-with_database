---
import Card from './Card.astro'
import SectionHeader from './SectionHeader.astro'
const {class: className, id: id, showOverlay} = Astro.props

const artistCardsData = [
  {
    artistName: 'Samuel Himmelstrup',
    artistImage: 'samuel_himmelstrup',
    artistBandRole: 'Sanger',
    id: 1,
  },
  {
    artistName: 'Mikkel Deleuran',
    artistImage: 'mikkel_deleuran',
    artistBandRole: 'Bassist',
    id: 2,
  },
  {
    artistName: 'Julian Falck',
    artistImage: 'julian_falck',
    artistBandRole: 'Trommeslager',
    id: 3,
  },
  {
    artistName: 'Lasse',
    artistImage: 'lasse',
    artistBandRole: 'Organist',
    id: 4,
  },
  {
    artistName: 'Anders',
    artistImage: 'anders',
    artistBandRole: 'Guitarist',
    id: 5,
  },
]
---

<div class="flex flex-col mt-16">
  <SectionHeader sectionHeaderText="Hvem bestÃ¥r vi af?" />
  <div
    class='concert-cards-container flex flex-wrap justify-center'
    id='artist_cards_container'>
    {
      artistCardsData.map((artistCard, index) => (
        <a href={`/about/${artistCard.id}`}>
          <Card
            class="artist-card m-4"
            id={artistCard.id} // Uses artistCard.id, not index
            src={`/images/about/about_cards/${artistCard.artistImage}.webp`}
            isArtistCard={true}
            showOverlay={showOverlay}
            artistName={artistCard.artistName}
            artistBandRole={artistCard.artistBandRole}
          />
        </a>
      ))
    }
  </div>
</div>
